<Window x:Class="NetworkProgram.EmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkProgram"
        mc:Ignorable="d"
        Title="EmailWindow" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Кому:"/>
            <TextBox x:Name="textBoxTo" Text="Soboliev.danik@gmail.com"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Тема:"/>
            <TextBox x:Name="textBoxSubject" Text="Hello, from C# WPF code"/>
        </StackPanel>
        <TextBox x:Name="textBoxContent" Text="Добрый день! Этот текст отправлен из программы C# кода))" TextWrapping="Wrap"/>
        <Button x:Name="BtnSendButton1" Content="Отправить" Margin="10 5" Click="BtnSendButton1_Click"/>
    </StackPanel>
    
</Window>
